<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/foo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#272727">

    <ListView
        android:id="@+id/foodListView"
        android:layout_width="412dp"
        android:layout_height="500dp"
        android:background="#272727"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.199">

    </ListView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/doneAddingFoodBtn"
        android:layout_width="124dp"
        android:layout_height="49dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/rectangle_4"
        android:clickable="true"
        android:elevation="10dp"
        android:focusable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodListView"
        app:layout_constraintVertical_bias="0.411" />

    <TextView
        android:id="@+id/textView37"
        android:layout_width="94dp"
        android:layout_height="38dp"
        android:elevation="20dp"
        android:gravity="center"
        android:text="Done"
        android:textAlignment="center"
        android:textAppearance="@style/login"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@+id/doneAddingFoodBtn"
        app:layout_constraintEnd_toEndOf="@+id/doneAddingFoodBtn"
        app:layout_constraintStart_toStartOf="@+id/doneAddingFoodBtn"
        app:layout_constraintTop_toTopOf="@+id/doneAddingFoodBtn" />

    <TextView
        android:id="@+id/dasdas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/doneAddingFoodBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodListView" />

</androidx.constraintlayout.widget.ConstraintLayout>